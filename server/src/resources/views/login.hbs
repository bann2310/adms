<head>
    <link rel="stylesheet" href="./css/login.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Login page</title>
</head>

<div class="form">
    <h1 class="form__tittle">Welcome</h1>
    <form class="form__form" id="form">
    
        <div class="form__format username">
            <label for="username">Username</label> 
            <input type="username" class="format__input" id="username" name="username"/>
        </div>
        
        <div class="form__format password">
            <label for="password">Password</label> 
            <input type="password" class="format__input" id="password" name="password"/>
        </div>

        <div class="form__fail hidden" id="hidden">Username or password is incorrect</div>

        <div class="form__rf">
            <div class="rf__ r">
                <input type="checkbox" id="remember">
                <label for="checkbox">Remember me</label>
            </div>
            <a href="/forgot" class="rf__ f">Forgotten password?</a> 
        </div>

        <button type="submit" class="form__confirm">Login</button>
    
    </form>
</div>
    

<script src="./js/login.js"></script>  